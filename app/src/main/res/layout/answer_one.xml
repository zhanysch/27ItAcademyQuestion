<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="26dp"
        android:scaleType="center"
       android:background="@drawable/covidr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="268dp"
        android:layout_marginTop="428dp"
        android:layout_width="185dp"
        android:layout_height="186dp"/>


    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="177dp"
        android:scaleType="center"
        android:background="@drawable/smallcovid"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="409dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="258dp"
        android:layout_width="54dp"
        android:layout_height="54dp"/>

    <ImageView
        android:id="@+id/covidleft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/covidleft"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="215dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="458dp"
        android:layout_width="298dp"
        android:layout_height="307dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="64dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="167dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/ic_academy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/derzhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/image">

                <TextView
                    android:id="@+id/tvFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/montseratbolld"
                    android:gravity="center"
                    android:text="так держать!"
                    android:textAllCaps="true"
                    android:textColor="@color/greenanswerone"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageRectangle"
                    android:layout_width="192dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rectangleanswerone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFirst" />


                <TextView
                    android:id="@+id/tvSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/monserat_medium"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="Ваш риск заболеть составляет\n
от 0% до 10%"
                    android:textColor="@color/greenanswerone"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="13dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/imageRectangle" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/monserat_medium"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="Похоже, вы серьезно отнеслись к ситуации и соблюдаете основные меры предосторожности. Продолжайте в том же духе и скоро все закончится!"
                android:textColor="@color/dark"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/derzhat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>